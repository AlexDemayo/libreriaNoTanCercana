<!DOCTYPE html>
<html>
<%- include('partials/head', {title: 'Libreria No Tan Cercana'}) %>
<body>
  
  <%- include('partials/header') %>
  
  <div class="containerDelBody" >
    <br>
    <div class="div-span-index">
      <span class="span-index">Recomendados</span>
    </div> 
     
    <div uk-slider class="slide-container">
      
      <div class="uk-position-relative">
        
        <div class="uk-slider-container uk-light">
          <ul class="uk-slider-items uk-child-width-1-3 uk-child-width-1-3@m  uk-grid">
            <% books.forEach(book => { %>
              
              <div class="uk-width-1-4@m uk-width-1-2@s">
                <li>
                  <div class="uk-panel">
                    <a href="/books/<%= book.id %>">
                      
                      
                      <img class="slide-img" src="/images/books/<%=book.image %>" alt="book photo">
                      <p class="clase-subtitulo"><%= book.title %></p>
                    </a>
                    
                  </div>
                </li>
              </div>
              <% }) %>
              
            </ul>
          </div>
          
          <div class="uk-hidden@s uk-light">
            <a class="uk-position-center-left uk-position-small" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
            <a class="uk-position-center-right uk-position-small" href="#" uk-slidenav-next uk-slider-item="next"></a>
          </div>
          
          <div class="uk-visible@s">
            <a class="uk-position-center-left-out uk-position-small" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
            <a class="uk-position-center-right-out uk-position-small" href="#" uk-slidenav-next uk-slider-item="next"></a>
          </div>
          
        </div>
        
        
        
        
      </div>
      
      <div class="div-span-index">
        <span class="span-index" id="NOV">Novedades</span>
      </div> 
      
      <div uk-slider>
        
        <div class="uk-position-relative">
          
          <div class="uk-slider-container uk-light">
            <ul class="uk-slider-items uk-child-width-1-3 uk-child-width-1-3@m  uk-grid">
              <% lastBooks.forEach(book => { %>
                <div class="uk-width-1-6@m uk-width-1-2@s">
                  <li>
                    <div class="uk-panel">
                      <a href="/books/<%= book.id %>">   
                        <img class="slide-img" src="/images/books/<%=book.image %>" alt="book photo">
                      </a>
                      <p class="clase-subtitulo"><%= book.title %></p>
                    </div>
                  </li>
                </div>
                <% }) %>   
              </ul>
            </div>
            
            <div class="uk-hidden@s uk-light">
              <a class="uk-position-center-left uk-position-small" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
              <a class="uk-position-center-right uk-position-small" href="#" uk-slidenav-next uk-slider-item="next"></a>
            </div>
            
            <div class="uk-visible@s">
              <a class="uk-position-center-left-out uk-position-small" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
              <a class="uk-position-center-right-out uk-position-small" href="#" uk-slidenav-next uk-slider-item="next"></a>
            </div>
            
          </div>
          
      </div>

      <div class="div-span-index">
        <span class="span-index" id="MAS">Más vendidos</span>
      </div> 
      
      <div uk-slider>
        
        <div class="uk-position-relative">
          
          <div class="uk-slider-container uk-light">
            <ul class="uk-slider-items uk-child-width-1-3 uk-child-width-1-3@m  uk-grid">
              <% bestSellers.forEach(book => { %>
                <div class="uk-width-1-6@m uk-width-1-2@s">
                  <li>
                    <div class="uk-panel">
                      <a href="/books/<%= book.id %>">   
                        <img class="slide-img" src="/images/books/<%=book.image %>" alt="book photo">
                      </a>
                      <p class="clase-subtitulo"><%= book.title %></p>
                    </div>
                  </li>
                </div>
                <% }) %>   
              </ul>
            </div>
            
            <div class="uk-hidden@s uk-light">
              <a class="uk-position-center-left uk-position-small" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
              <a class="uk-position-center-right uk-position-small" href="#" uk-slidenav-next uk-slider-item="next"></a>
            </div>
            
            <div class="uk-visible@s">
              <a class="uk-position-center-left-out uk-position-small" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
              <a class="uk-position-center-right-out uk-position-small" href="#" uk-slidenav-next uk-slider-item="next"></a>
            </div>
            
          </div>
          
      </div>
        
        <div class="div-span-index">
          <span class="span-index" id="AUTHOR">Autor del mes </span>
        </div> 
        
        <div class="uk-card uk-card-default uk-grid-collapse uk-child-width-1-2@s uk-margin author-container" uk-grid>
          <div class="uk-card-media-left uk-cover-container uk-width-large uk-height-large month-author-img-container">
            <img src="/images/monthlyAuthors/<%=monthlyAuthor.image %> " alt="murakami" uk-cover class="month-author-img-container">
            <canvas width="600" height="400"></canvas>
          </div>
          <div class ="nuevo">
            <div class="uk-card-body">
              <h3 class="uk-card-title"><%= monthlyAuthor.name %> </h3>
              <p>Conocé las obras del autor </p>
              
              <div class="uk-position-relative  uk-visible-toggle uk-light" tabindex="-1" uk-slider>
                
                <ul class="uk-slider-items uk-child-width-1-2 uk-child-width-1-3@m uk-grid">
                  <% booksByMonthlyAuthor.forEach(book => { %>
                    
                    <div class="uk-width-1-2">
                      <li>
                        <div class="uk-panel">
                          <a href="/books/<%= book.id %>">
                            
                            
                            <img src="/images/books/<%=book.image %>" alt="book photo">
                            
                          </a>
                          <p class="clase-subtitulo"><%= book.title %></p>
                        </div>
                      </li>
                    </div>
                    <% }) %>
                    
                  </ul>
                  <ul class="uk-slider-nav uk-dotnav uk-flex-center uk-margin"></ul>
                  
                </div>
              </div>
            </div>
          </div>
          
          
          <div class="div-span-index">
            <span class="span-index">Categorías Recomendadas </span>
          </div> 
          <div class="uk-child-width-1-3@m uk-grid-small uk-grid-match" uk-grid>
            <% categories.forEach(category => { %>
              <a class="categories-a" href="/category/<%= category.name %>">
                <div >
                  <div class="uk-card uk-card-hover uk-card-body uk-category-body">
                      <h3 class="uk-card-title uk-categories-title"><%= category.name %> </h3>
                      <p>Descubrí esta categoría</p>
                  </div>
              </div>
              </a>
            <% }) %>
           
          </div>
        </div>
        
      </div>
      
      
      <%- include('partials/footer') %>
      
      <script src="https://cdn.jsdelivr.net/npm/uikit@3.5.4/dist/js/uikit.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/uikit@3.5.4/dist/js/uikit-icons.min.js"></script>
      <script src="/js/sessionStorage.js"></script>
      <script src="/js/categories.js"></script>
      
    </body>
    
    
    </html>
    
