
<html>
    <%- include('partials/head', {title: 'Ingresar'}) %>
<body>
   
    <%- include('partials/header') %>
 

    <div class="container">
        <div id="flex" class="row space">
            <div class="col-12 col-md-5 col-lg-5 form-left">
                <h2>Iniciar sesión</h2>
                <form  class="login"  action="login" method="POST" value="login">
                    <div>
                        <label for="emailLog"></label>
                        <input type="email" id="emailLog" name="emailLog" class="form-input" value="<%= typeof oldLogin == "undefined" ? null : oldLogin.emailLog %>" placeholder="Email">
                        <p class="error"><%= typeof errorsLogin == 'undefined' ? null : errorsLogin.emailLog ? errorsLogin.emailLog.msg : null %></p>
                    </div>
                    <div>
                        <label for="password"></label>
                        <input type="password" id="passwordLog" name="passwordLog" class="form-input" value="" placeholder="Contraseña">
                        <p class="error"><%= typeof errorsLogin == 'undefined' ? null : errorsLogin.passwordLog ? errorsLogin.passwordLog.msg : null %></p>
                    </div>
                    <div>
                        <input type="checkbox" id="remember" name="remember" class="form-check">
                        <label for="remember" class="form-label">Recuérdame</label>
                    </div>
                    <div>
                        <button type="submit">Iniciar sesión</button>  
                    </div>
                </form>
            </div>
            <div class="col-12 col-md-5 col-lg-5 form-right">
                <h2>Registrate</h2>
                <form class="register" action="register" method="POST" value="register" enctype="multipart/form-data">
                    <div>
                        <div>
                            <input type="text" id="userName" name="userName" placeholder="Usuario *" class="form-input" value="<%= typeof oldRegister == "undefined" ? null : oldRegister.userName %>">
                            <p class="error"><%= typeof errorsRegister == 'undefined' ? null : errorsRegister.userName ? errorsRegister.userName.msg : null %></p>
                        </div>
                        <div>
                            <input type="text" id="email" name="email" placeholder="Email *" class="form-input" value="<%= typeof oldRegister == "undefined" ? null : oldRegister.email %>">
                            <p class="error"><%= typeof errorsRegister == 'undefined' ? null : errorsRegister.email ? errorsRegister.email.msg : null %></p>
                        </div>
                        <div>
                            <input type="password" id="password" name="password" class="form-input" placeholder="Contraseña *">
                            <p class="error"><%= typeof errorsRegister == 'undefined' ? null : errorsRegister.password ? errorsRegister.password.msg : null %></p>
                        </div>
                        <div>
                            <input type="password" id="confirmPassword" name="confirmPassword" class="form-input" placeholder="Repita la contraseña: *">
                            <p class="error"><%= typeof errorsRegister == 'undefined' ? null : errorsRegister.confirmPassword ? errorsRegister.confirmPassword.msg : null %></p>
                        </div>
                        <div>
                            <label class="avatar-label" name="image">Imagen de perfil</label>
                            <input type="file" name="image" class="avatar-input">
                            <p class="error"><%= typeof errorsRegister == 'undefined' ? null : errorsRegister.image ? errorsRegister.image.msg : null %></p>
                        </div>
                        <div>
                            <p>(*) Campos obligatorios.</p>
                        </div>
                        <div>
                            <button type="submit">Registrate</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
  
  </body>

</html>

