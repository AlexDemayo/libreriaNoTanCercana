<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<body>
    <!-- Header -->
    
    <!-- /Header -->
    
    <div class="container products-wrapper">
        <div class="row justify-content-center">
            <div class="col-12">
                <h2 class="products-title">Registro</h2>
            </div>
            <div class="col-6">   
                <form action="/login-register" method="POST">
                    <div class="row product-detail">
                        <div class="col-12">
                            <label for="username" class="form-label">Username: *</label>
                            <input type="text" id="username" name="username" placeholder="user name" class="form-input" value="<%= typeof oldRegister == "undefined" ? null : oldRegister.username %>">
                            <p class="error"><%= typeof errorsRegister == 'undefined' ? null : errorsRegister.username ? errorsRegister.username.msg : null %></p>
                        </div>
                        <div class="col-12">
                            <label for="email" class="form-label">Email: *</label>
                            <input type="text" id="email" name="email" placeholder="Ej: gonza@dh.com" class="form-input" value="<%= typeof oldRegister == "undefined" ? null : oldRegister.email %>">
                            <p class="error"><%= typeof errorsRegister == 'undefined' ? null : errorsRegister.email ? errorsRegister.email.msg : null %></p>
                        </div>
                        <div class="col-12">
                            <label for="password" class="form-label">Contraseña: *</label>
                            <input type="password" id="password" name="password" class="form-input" value="">
                            <p class="error"><%= typeof errorsRegister == 'undefined' ? null : errorsRegister.password ? errorsRegister.password.msg : null %></p>
                        </div>
                        <div class="col-12">
                            <label for="retype" class="form-label">Repite la contraseña: *</label>
                            <input type="password" id="confirmPassword" name="confirmPassword" class="form-input" value="">
                            <p class="error"><%= typeof errorsRegister == 'undefined' ? null : errorsRegister.confirmPassword ? errorsRegister.confirmPassword.msg : null %></p>
                        </div>
                        <div class="mt-5 col-12">
                            <button type="submit" class="buy-now-button">Registrate</button>
                        </div>
                        <div class="mt-3 col-12">
                            <p>(*) Campos obligatorios.</p>
                        </div>
                    </div>
                </form>
                
                <div class="g-signin2 mt-5" data-onsuccess="onSignIn"></div>
            </div>
        </div>
        
    </div>
    <div class="container products-wrapper">
        <div class="row justify-content-center">
            <div class="col-12">
                <h2 class="products-title">Login</h2>
            </div>
            
            
            <div class="col-6">
                <form action="/login-register" method="POST">
                    <div class="row product-detail">
                        <div class="col-12">
                            <label for="email" class="form-label">Email:</label>
                            <input type="text" id="email" name="email" placeholder="nombre@tudominio.com" class="form-input" value="<%= typeof oldLogin == "undefined" ? null : oldLogin.email %>">
                            <p class="error"><%= typeof errorsLogin == 'undefined' ? null : errorsLogin.email ? errorsLogin.email.msg : null %></p>
                        </div>
                        <div class="col-12">
                            <label for="price" class="form-label">Contraseña:</label>
                            <input type="password" id="password" name="password" class="form-input" value="">
                            <p class="error"><%= typeof errorsLogin == 'undefined' ? null : errorsLogin.password ? errorsLogin.password.msg : null %></p>
                        </div>
                        <div class="col-12">
                            <label for="remember" class="form-label">Recuérdame</label>
                            <input type="checkbox" id="remember" name="remember" class="form-check">
                        </div>
                        <div class="col-12 mt-5">
                            <button type="submit" class="buy-now-button">Iniciar sesión</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        
    </div>
    <!-- /todos los productos -->
    
    <!-- footer -->
    
    <!-- /footer -->
</body>

</html>