<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: 'Cart'}) %>
<body>
    
    <%- include('partials/header') %>
    
    <div class="container body-container">
        <table id="cart" class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width:50%" >Producto</th>
                    <th style="width:12%" class="text-center">Precio</th>
                    <th style="width:10%" class="text-center">Cantidad</th>
                    <th style="width:18%" class="text-center">Subtotal</th>
                    <th style="width:10%" class="text-center"></th>
                </tr>
            </thead>
            <tbody>
                <% let total = 0 %> 
                <% items.forEach(item => { %>
                    <tr>
                        <% total = total + item.total %> 
                        <td data-th="Product">
                            <div class="row">
                                <div class="col-sm-2 hidden-xs"><img alt="<%= item.title %> " class="img-responsive" src="/images/books/<%= item.image %>"></div>
                                <div class="col-sm-10">
                                    <h4 class="nomargin"><%= item.title %> </h4>
                                    <p><%= item.author %> | <%= item.publisher.name %> </p>
                                </div>
                            </div>
                        </td>
                        <td data-th="Price" class="text-center">$<%= item.price %> </td>
                        <td data-th="Quantity" class="text-center"><%= item.quantity %> </td>
                        <td data-th="Subtotal" class="text-center">$<%= item.total %> </td>
                        <td class="actions" data-th="">
                            <!-- <button class="btn btn-info btn-sm"><i class="fa fa-refresh"></i></button> -->
                            <form action="/users/cart/delete" method="POST">
                                <input type="hidden" name="itemId" value='<%= item.id %>'>
                                <button class="btn btn-danger btn-sm" type="submit"><i class="fa fa-trash-o"></i></button>
                            </form>
                            
                        </td>
                    </tr>
                <% }) %>              
                
                
            </tbody>
            <tfoot>
                <tr class="visible-xs">
                    <td class="text-center"><strong>$<%= total %></strong></td>
                </tr>
                <tr>
                    <td><a href="/" class="btn btn-warning"><i class="fa fa-angle-left"></i> Seguir comprando</a></td>
                    <td colspan="2" class="hidden-xs"></td>
                    <td class="hidden-xs text-center"><strong>$<%= total %></strong></td>
                    <td>
                        <form action="/users/shop" method="POST">
                            <button class="btn btn-success btn-block" type="submit">Comprar <i class="fa fa-angle-right"></i></button>
                        </form>
                        <!-- <a href="#" class="btn btn-success btn-block">Comprar <i class="fa fa-angle-right"></i></a> -->
                    </td>
                </tr>
            </tfoot>
        </table>
        
    </div>
    
    <%- include('partials/footer') %>
    
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</body>
</html>